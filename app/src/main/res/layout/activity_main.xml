<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TableLayout
        android:id="@+id/tableL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/row1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingRight="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="$"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row1"
            android:layout_marginTop="10dp"
            android:background="@color/nhtext" />
    </TableLayout>

    <TableLayout
        android:id="@+id/tableL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableL1"
        android:layout_marginTop="15dp">

        <TableRow>

            <ImageView
                android:id="@+id/mcall"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/call" />

            <ImageView
                android:id="@+id/mmessage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/message" />

            <ImageView
                android:id="@+id/mtopup"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/top_up" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Call"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Topup"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />
        </TableRow>

        <TableRow android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/mbundles"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/bundles" />

            <ImageView
                android:id="@+id/mrates"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/rates" />

            <ImageView
                android:id="@+id/mtransfer"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/transfer" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bundles"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rates"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transer"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />
        </TableRow>

        <TableRow android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/msettings"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/settings" />

            <ImageView
                android:id="@+id/minvite"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/invite" />

            <ImageView
                android:id="@+id/mhelp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/help" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />
        </TableRow>

        <TableRow android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/mvideo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/video" />

            <ImageView
                android:id="@+id/mchat"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/chat" />

            <ImageView
                android:id="@+id/mapp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/app" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Video Call"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chat"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="App Calling"
                android:textAlignment="center"
                android:textColor="@color/nhtext" />

        </TableRow>


    </TableLayout>


</RelativeLayout>
