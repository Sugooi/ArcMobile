<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="www.wielabs.com.arc.fragment.RecentCalls">

    <ImageView
        android:id="@+id/imgnomessages"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/nomessages" />

    <TextView
        android:id="@+id/nocalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgnomessages"
        android:layout_centerHorizontal="true"
        android:text="No Recent Messages"
        android:textAlignment="center"
        android:textSize="30dp" />

</RelativeLayout>
